.header
  .container
    = link_to admin_root_path do
      .logo.left
        .colorLogo
    - if current_user   
      .navbar.pull-right
        %ul.nav
          %li.dropdown
            = link_to '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown' do
              = current_user
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to edit_admin_user_path(current_user) do
                  %i.icon-user
                  Edit
              %li.divider
              %li= link_to 'Logout', logout_path



    .clear