!!! XML
!!!
%html{ :'xml:lang' => "en", :lang => "en" }
  %head
    %title
      = h(yield(:title) || "Untitled")

    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'application', :media => 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tag

  %body
    .header
      .headerContainer
        .logo.left
          .bars
            .top
              .bar.left
              %span.role.right.relativePosition.top10.marginRight20 director | producer
              .clear
            .middle
              .bar.left
              %span.name.dark.right.marginTop5 harris
              %span.name.right.marginTop5 benjamin
              .clear
            .bottom
              .bar.left
              %span.company.right.relativePosition.bottom10 CREATIVE
              .clear
        .nav.right
          %ul.menu
            %li= link_to 'blog', '#'
            %li= link_to 'video', '#'
            %li= link_to 'clients', '#'
            %li= link_to 'contacts', '#'
        .clear
    %hr
    = yield

    .footer